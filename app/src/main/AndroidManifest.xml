<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cat.novocare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NovoCare"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main_activity.more.PrivacyActivity" />
        <activity android:name=".main_activity.more.TermsActivity" />
        <activity android:name=".main_activity.more.AboutUsActivity" />
        <activity android:name=".main_activity.more.faq.FaqActivity" />
        <activity android:name=".main_activity.edu_center.NewsDetails" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main_activity.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>